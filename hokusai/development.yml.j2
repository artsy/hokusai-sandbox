---
version: '2.4'
services:
  {{ project_name }}:
    extends:
      file: build.yml
      service: {{ project_name }}
    environment:
      - RABBITMQ_HOST=amqp://guest:guest@{{ project_name }}-rabbitmq:5672/
    ports:
      - 8080:8080
    depends_on:
      - {{ project_name }}-rabbitmq
  {{ project_name }}-rabbitmq:
    image: rabbitmq:3.6.6-management-alpine
    ports:
      - "5672:5672"
      - "15672:15672"
